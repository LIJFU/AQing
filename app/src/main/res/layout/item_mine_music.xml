<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="65dp"
    android:background="@drawable/item_blog_about_bg_selector"
    android:orientation="vertical"
    android:paddingLeft="@dimen/default_margin_left">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal"
        android:layout_marginBottom="1dp"
        android:gravity="center">

        <ImageView
            android:id="@+id/item_song_cover"
            android:layout_width="@dimen/space_45"
            android:layout_height="@dimen/space_45"
            android:scaleType="fitXY"
            tools:src="@mipmap/load_img_default" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/space_10"
            android:orientation="vertical">

            <TextView
                android:id="@+id/item_song_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:paddingRight="16dp"
                android:textColor="@color/black_alpha_192"
                android:textSize="@dimen/text_size_16"
                tools:ignore="RtlHardcoded,RtlSymmetry"
                tools:text="我的童年单曲循环之歌" />
            
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/space_5"
                android:paddingRight="16dp"
                android:gravity="center_vertical">

                <ImageView
                    android:layout_width="15dp"
                    android:layout_height="15dp"
                    android:scaleType="centerInside"
                    android:src="@mipmap/down_yet_green"/>

                <TextView
                    android:id="@+id/item_song_singer"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="1"
                    android:textColor="@color/black_alpha_112"
                    android:textSize="@dimen/text_size_12"
                    tools:ignore="RtlHardcoded,RtlSymmetry"
                    tools:text="超人气组合"/>

            </LinearLayout>

        </LinearLayout>


        <LinearLayout
            android:id="@+id/item_song_menu"
            android:layout_width="@dimen/space_50"
            android:layout_height="match_parent"
            android:gravity="center">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_15"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_more_menu_gray" />

        </LinearLayout>


    </LinearLayout>

    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="1px"
        android:layout_gravity="bottom"
        android:layout_marginLeft="@dimen/space_50"
        android:background="#eee" />

</FrameLayout>