<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">
    <include layout="@layout/include_action_bar"></include>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/default_padding_left"
        android:paddingRight="@dimen/default_padding_left"
        android:orientation="horizontal"
        android:background="@drawable/white_line_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:text="头像"/>

        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >
            <com.xiaoyuan54.child.edu.app.widget.CircleImageView
                android:layout_width="@dimen/space_50"
                android:layout_height="@dimen/space_50"
                android:src="@mipmap/default_header_img"/>

        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/lv_name"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/default_padding_left"
        android:paddingRight="@dimen/default_padding_right"
        android:orientation="horizontal"
        android:background="@drawable/white_line_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:text="昵称"/>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:text="提莫大魔王"/>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lv_gender"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/default_padding_left"
        android:paddingRight="@dimen/default_padding_right"
        android:orientation="horizontal"
        android:background="@drawable/white_line_border">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:text="性别"/>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >
            <TextView
               android:gravity="right|center_vertical"
                android:id="@+id/tv_gender_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:hint="未填写"
                android:textColorHint="@color/gray_bf"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:id="@+id/lv_birthday"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/default_padding_left"
        android:paddingRight="@dimen/default_padding_right"
        android:orientation="horizontal"
        android:background="@drawable/white_line_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:text="生日"/>



        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/tv_birthday_value"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_16"
                android:hint="未填写"
                android:textColorHint="@color/gray_bf"
                />

        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:gravity="center_vertical"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingLeft="@dimen/default_padding_left"
        android:paddingRight="@dimen/default_padding_right"
        android:orientation="horizontal"
        android:background="@drawable/white_line_border">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:gravity="center"
            android:textSize="@dimen/text_size_16"
            android:textColor="@color/gray_bf"
            android:text="年龄"/>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="match_parent"
            android:gravity="right|center_vertical"
            android:orientation="horizontal" >
            <TextView
                android:id="@+id/ageValue"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:textSize="@dimen/text_size_16"
                android:textColor="@color/gray_bf"
                android:text=""/>

        </LinearLayout>
    </LinearLayout>
</LinearLayout>