<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black_alpha_64"
    android:clickable="true"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="320dp"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scaleType="fitCenter"
                android:src="@mipmap/update_bg_header"/>

            <ImageView
                android:id="@+id/update_close_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="52dp"
                android:layout_marginRight="@dimen/space_15"
                android:scaleType="centerInside"
                android:src="@mipmap/icon_close"
                android:layout_gravity="top|right"/>

            <TextView
                android:id="@+id/update_v_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingTop="@dimen/space_5"
                android:paddingBottom="@dimen/space_5"
                android:paddingLeft="@dimen/space_15"
                android:paddingRight="@dimen/space_15"
                android:background="@drawable/bg_oval_main_green"
                android:textColor="@color/white"
                android:textSize="@dimen/text_size_12"
                android:layout_gravity="right|bottom"
                android:layout_marginRight="@dimen/space_10"
                tools:text="1.0->1.1.bate"/>

        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="@dimen/space_20"
            android:paddingLeft="@dimen/space_15"
            android:paddingRight="@dimen/space_15"
            android:background="@color/white"
            android:orientation="vertical">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="@dimen/text_size_15"
                android:textColor="@color/black_alpha_64"
                android:layout_marginBottom="@dimen/space_20"
                android:gravity="center"
                android:text="已在wifi环境下准备了新版安装包"/>


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="@dimen/space_120">
                <TextView
                    android:id="@+id/update_note_tv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:lineSpacingMultiplier="1.3"
                    android:minLines="5"
                    android:textSize="@dimen/text_size_15"
                    tools:text="1.真的是很长的娴熟的经济法的点附近的减肥的就当\n 2.减肥的就的防静电服大姐夫大姐夫地方的接口费觉得可怜附近； lfj的解放军的"/>

            </ScrollView>



        </LinearLayout>

        <FrameLayout
            android:layout_width="320dp"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@mipmap/update_bg_footer"/>
            
            <TextView
                android:id="@+id/update_intall_btn"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/space_40"
                android:paddingLeft="@dimen/space_30"
                android:paddingRight="@dimen/space_30"
                android:layout_gravity="center"
                android:gravity="center"
                android:textSize="@dimen/text_size_17"
                android:textColor="@color/white"
                android:background="@drawable/selector_update_btn"
                android:text="立即体验"/>

        </FrameLayout>

    </LinearLayout>


</LinearLayout>