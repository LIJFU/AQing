<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <android.support.design.widget.TabLayout
        android:id="@+id/tab_nav"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="#F6F6F6"
        app:tabGravity="center"
        app:tabIndicatorColor="@color/orange_common"
        app:tabMode="fixed"
        app:tabSelectedTextColor="@color/orange_common"
        app:tabTextColor="@color/project_listitem_someinfo"
        app:tabIndicatorHeight="2dp"
        app:tabTextAppearance="@style/viewpage_select_title"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/base_viewPager"
        android:layout_width="wrap_content"
        android:layout_height="match_parent" />


</LinearLayout>