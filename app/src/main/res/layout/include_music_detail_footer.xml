    <LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/transparent"
        android:paddingTop="@dimen/space_5"
        android:paddingBottom="@dimen/space_25"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/space_50"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:id="@+id/player_favor"
                android:layout_width="@dimen/space_50"
                android:layout_height="@dimen/space_50"
                android:scaleType="center"
                android:src="@mipmap/player_favor_nor"/>

            <ImageView
                android:id="@+id/player_down"
                android:layout_width="@dimen/space_50"
                android:layout_height="@dimen/space_50"
                android:layout_marginLeft="@dimen/space_40"
                android:layout_marginRight="@dimen/space_40"
                android:scaleType="center"
                android:src="@mipmap/player_down_nor"/>

            <ImageView
                android:id="@+id/player_share"
                android:layout_width="@dimen/space_50"
                android:layout_height="@dimen/space_50"
                android:scaleType="center"
                android:src="@mipmap/player_share_nor"/>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/space_20"
            android:paddingRight="@dimen/space_20"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:gravity="center">

            <TextView
                android:id="@+id/player_positon_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_alpha_192"
                android:textSize="@dimen/text_size_12"
                android:text="00:00"/>

            <SeekBar
                android:id="@+id/player_seekBar"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:progressDrawable="@drawable/seekbar_draw"
                android:thumb="@mipmap/player_seekbar_playback_thumb"
                android:max="100"/>

            <TextView
                android:id="@+id/player_duration_tx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/white_alpha_192"
                android:textSize="@dimen/text_size_12"
                android:text="00:00"/>

        </LinearLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/space_5"
            android:gravity="center"
            android:orientation="horizontal">

              <ImageView
                  android:id="@+id/player_play_mode"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="@dimen/space_40"
                  android:scaleType="centerInside"
                  android:src="@mipmap/play_mode_loop_white"/>

            <ImageView
                  android:id="@+id/player_play_last"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="@dimen/space_40"
                  android:scaleType="center"
                  android:src="@mipmap/player_pre_white"/>

            <ImageView
                  android:id="@+id/player_play"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="@dimen/space_50"
                  android:scaleType="centerInside"
                  android:layout_marginLeft="@dimen/space_8"
                  android:layout_marginRight="@dimen/space_8"
                  android:src="@mipmap/player_pause_white"/>

            <ImageView
                  android:id="@+id/player_play_next"
                  android:layout_width="0dp"
                  android:layout_weight="1"
                  android:layout_height="@dimen/space_40"
                  android:scaleType="centerInside"
                  android:src="@mipmap/player_next_white"/>

            <ImageView
                android:id="@+id/player_play_list"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/space_40"
                android:scaleType="centerInside"
                android:src="@mipmap/player_list_white"/>

        </LinearLayout>

    </LinearLayout>
